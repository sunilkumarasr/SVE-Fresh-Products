<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.crescendo.lldm.crescendo.A_Login">

        <RelativeLayout
            android:id="@+id/rl_one_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/v_one_login"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/purple_200" />


        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_one_login"
            android:layout_width="@dimen/_290sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:elevation="@dimen/_10sdp"

            app:cardBackgroundColor="@color/orange"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false"
            card_view:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@drawable/ic_baseline_arrow_back_24"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:gravity="center|left"
                    android:text="Contact Us"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:gravity="left"
            android:padding="@dimen/_5sdp"
            android:fontFamily="@font/poppins"
            android:text="We are Happy to serve you!"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">
        <ImageView
            android:id="@+id/Dial_ic"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/phone_ic"
            android:layout_marginLeft="@dimen/_5sdp"
            android:gravity="left"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:text="Contact Us"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/phone2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:gravity="left"
            android:padding="@dimen/_8sdp"
            android:maxLines="3"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />


</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/fullname_edit"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/rounded_editext_"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Full Name"
                android:fontFamily="@font/poppins"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/_6sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/_11sdp" />


            <EditText
                android:id="@+id/mobile_edit"
                android:fontFamily="@font/poppins"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rounded_editext_"
                android:drawableLeft="@drawable/ic_baseline_phone_24"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Phone Number"
                android:inputType="number"
                android:paddingLeft="@dimen/_6sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/_11sdp" />


            <EditText
                android:id="@+id/email_edit"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rounded_editext_"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/poppins"
                android:hint="Email"
                android:inputType="textEmailAddress"

                android:paddingLeft="@dimen/_6sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/_11sdp" />


            <ProgressBar
                android:id="@+id/progressBarcontact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />


            <EditText
                android:id="@+id/desc_edit"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rounded_editext_"
                android:drawableLeft="@drawable/ic_baseline_message_24"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Description"
                android:inputType="text"
                android:fontFamily="@font/poppins"
                android:paddingLeft="@dimen/_6sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/_11sdp" />


            <Button
                android:id="@+id/contactus_btn"
                android:layout_width="@dimen/_230sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/rounded_button_green"
                android:text="SUBMIT"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white">

            </Button>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>